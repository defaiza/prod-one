{
  "compilerOptions": {
    "target": "es2017",
    "lib": ["esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "resolveJsonModule": true,
    "isolatedModules": false,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "outDir": "./dist-scripts",
    "rootDir": "./src",
    "noEmit": false,
    "declaration": false,
    "sourceMap": false
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "**/*.test.ts",
    "src/app",
    "src/pages",
    "src/components",
    "src/store",
    "src/hooks",
    "src/middleware",
    "src/lib/das",
    "src/lib/mpl-core",
    "src/lib/mpl-hybrid",
    "src/lib/mpl-token-metadata",
    "src/lib/umi",
    "src/lib/airdropDataUtils.ts",
    "src/lib/authSession.ts",
    "src/lib/crossmintJwt.ts",
    "src/lib/fetchEscrowAssets.ts",
    "src/lib/fetchTokenBalance.ts",
    "src/lib/fetchUserAssets.ts",
    "src/lib/fetchUserTokenAccount.ts",
    "src/lib/hybridAuth.ts",
    "src/lib/transferSol.ts",
    "src/lib/yield.ts",
    "src/lib/redis.ts",
    "src/services/getPositionVault.ts",
    "src/services/meetupMatcher.service.ts",
    "src/workers",
    "src/services/points.service.ts",
    "src/services/redis.service.ts",
    "src/middleware.ts"
  ]
} 